extends ../layout

block content
    div(class='container')
        div(class='row')
            div(class='col-md-12')
                table.table
                    thead
                        tr
                            th(scope='col') #
                            th(scope='col') Color
                            th(scope='col') Modelo
                            th(scope='col') Ubicaci√≥n
                            th(scope='col')
                            th(scope='col')
                    tbody
                        each bike in bikes
                            tr
                                th(scope='row')= bike.id
                                td= bike.color
                                td= bike.modelo
                                td= bike.ubicacion
                                td
                                    a(href=`api/bikes/${bike.id}/edit`) Editar
                                td
                                    form.inline(method='post' action='api/bikes/' + bike.id + '/delete')
                                        input(type='hidden' name='id' value=bike.id)
                                        button.likn-button(type='submit' name='submit_param' value='submit_value' class='btn')= 'Eliminar'